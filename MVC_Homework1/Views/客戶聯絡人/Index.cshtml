@model IEnumerable<MVC_Homework1.Models.客戶聯絡人>

@{
    ViewBag.Title = "客戶聯絡人";
    var keyword = this.ViewContext.ViewData.ModelState["keyword"]?.Value?.AttemptedValue ?? "";
    var job = this.ViewContext.ViewData.ModelState["job"]?.Value?.AttemptedValue ?? "";
}

<h2>客戶聯絡人</h2>
<a href="@Url.Action("ExcelExport")">匯出報表</a>
<hr />

@using (Html.BeginForm("Index", "客戶聯絡人", FormMethod.Get, new {@class= "form-group form-group-sm" }))
{
    @Html.Label("姓名")
    @Html.TextBox("keyword", null, new { @class = "form-control", placeholder = "請輸入聯絡人姓名" })
    @Html.Label("職稱")
    @Html.TextBox("job", null, new { @class = "form-control", placeholder = "請輸入職稱" })
    <br/>
    <input type="submit" class="btn btn-primary" title="搜尋" value="搜尋" />
}
<hr />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.職稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.姓名)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.手機)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.職稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.手機)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<ul class="pagination">
    <li class="@(ViewBag.Current == 1 ? "disabled" : "")"><a href="@Url.Action("Index", new {page = ViewBag.Current <= 1 ? 1 : ViewBag.Current - 1, keyword = keyword, job = job})">&laquo;</a></li>
    @for (int i = 1; i <= ViewBag.Count; i++)
    {
        <li class="@(ViewBag.Current == i ? "active" : "")"><a href="@Url.Action("Index", new {page = i, keyword = keyword, job = job})">@i</a></li>
    }
    <li class="@(ViewBag.Current == ViewBag.Count ? "disabled" : "")"><a href="@Url.Action("Index", new {page = ViewBag.Current >= ViewBag.Count ? ViewBag.Count : ViewBag.Current + 1, keyword = keyword, job = job})">&raquo;</a></li>
</ul>
